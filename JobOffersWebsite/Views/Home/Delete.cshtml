@model JobOffersWebsite.Models.ApplyForJob

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Delete</h2>

<h3>هل تريد تاكيد الحذف</h3>
<div>
    <h4>ApplyForJob</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            عنوان الوظيفة
        </dt>

        <dd>
            @Html.DisplayFor(model => model.job.JobTitle)
        </dd>
        <dt>
            نص الرسالة
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Message)
        </dd>

        <dt>
            تاريخ الارسال
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="تأكيد الحذف" class="btn btn-default" /> |
            @Html.ActionLink("العودة الى قائمة الوظائف", "GetJobsByUser")
        </div>
    }
</div>
