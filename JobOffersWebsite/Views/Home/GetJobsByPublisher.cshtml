@model IEnumerable<JobOffersWebsite.Models.JobsViewModel>

@foreach (var gr in Model)
{ 
<h3>@gr.JobTitle</h3>
    <table class="table table-bordered table-hover" >
        <tr>
            <th>
                أسم الباحث
            </th>
            <th>
                نص الرسالة
            </th>
            <th>
                تاريخ الأرسال
            </th>
        </tr>
        @foreach (var item in gr.Items)
        {
            <tr>
                <td>
                    @item.user.UserName
                </td>
                <td>
                    @item.Message
                </td>
                <td>
                    @item.Date
                </td>
            </tr>

        }
    </table>
}